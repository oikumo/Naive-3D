{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tests",
            "program": "${workspaceFolder}/test-runner.mjs",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Launch Paint app",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${workspaceFolder}/browser/paint.html"
        },
        {
            "name": "Launch Maze app",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${workspaceFolder}/browser/maze.html"
        }
    ]
}